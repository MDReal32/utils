{
  "name": "project-name",
  "version": "1.0.0",
  "scripts": {
    "start": "cross-env NODE_ENV=production node build/server",
    "serve": "cross-env NODE_ENV=development nodemon server",
    "prebuild": "rimraf build && yarn build:server && yarn build:client && yarn build:server-bundle",
    "build": "ts-node prerenderer.ts",
    "postbuild": "yarn version --patch --no-commit-hooks --no-git-tag-version",
    "build:server": "tsc -p tsconfig.server.json",
    "build:server-bundle": "vite build --ssr src/entry-server.ts --outDir build/server-bundle",
    "build:client": "vue-tsc --noEmit && vite build --ssrManifest --outDir build/client"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "express": "^4.17.2",
    "glob": "^7.2.0",
    "html-minifier": "^4.0.0",
    "prettier": "^2.5.1",
    "serve-static": "^1.14.2",
    "vue": "^3.2.25",
    "vue-router": "^4.0.12",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.13",
    "@types/glob": "^7.2.0",
    "@types/html-minifier": "^4.0.2",
    "@types/node": "^17.0.12",
    "@types/prettier": "^2.4.3",
    "@vitejs/plugin-vue": "^2.0.0",
    "cross-env": "^7.0.3",
    "html-minifier": "^4.0.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "sass": "^1.49.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5",
    "vite": "^2.7.2",
    "vue-tsc": "^0.29.8"
  }
}
